<div class="col-md-4 col-md-offset-4">
  <h2>新增讨论板</h2>
  <hr>
  <%= form_for @group do |f| %>

  <% if @group.error.any? %>
  <ul>
    <% @group.error.full_message.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
  <% end %>

  主题
  <br>
  <%= f.text_field :title  %>
  <br>
  <br>
  讨论范畴说明
  <br>
  <%= f.text_area :description  %>
  <br>
  <br>
  <%= f.submit "提交", :disable_with => '提交中……'  %>
  <% end %>
  <hr>
</div>
