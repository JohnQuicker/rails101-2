<%= form_for @group do |f| %>
<div class="form-group">
  <div class="form-group string optional">
    <%= f.label "主题", :class => "string optional control-label" %>
    <%= f.text_field :title, :class => "string optional form-control"%>
  </div>

  <div class="form-group string optional">
    <%= f.label "范围举例说明", :class => "string optional control-label" %>
    <%= f.text_area :description, :class => "string optional form-control"%>
  </div>

</div>
<!-- <%= f.submit "提交", :disable_with => '提交中……'  %> -->
<%= f.submit "提交", class: "btn btn-primary", data: {disable_with: '提交中……'} %>
<% end %>


